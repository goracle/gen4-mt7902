+			else
+				KAL_RELEASE_MUTEX(prAdapter, MUTEX_SET_OWN);
+			
+			/* Attempt Tier-3 PCIe recovery - returns TRUE if success */
+			return (mt79xx_pci_function_recover(prHifInfo->pdev,
+							    prAdapter->prGlueInfo)
+				== WLAN_STATUS_SUCCESS);
